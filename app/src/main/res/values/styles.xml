<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MediumButton" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:background">@drawable/outline_rounded</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <attr name="sb_shadow_radius" format="reference|dimension"/>

</resources>
